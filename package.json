{
  "name": "starter",
  "version": "1.0.0",
  "description": "Landing page for Natours",
  "main": "index.js",
  "scripts": {
    "scss": "node-sass sass/main.scss css/style.css -w",
    "serve": "live-server --no-css-inject",
    "start-both": "npm-run-all --parallel serve scss",
    "start": "parallelshell \"npm run scss -w\" \"npm run serve\"",
    "compile": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "browserslist": "last 10 versions",
    "prefix:css": "postcss css/style.concat.css --use autoprefixer -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build-css": "npm-run-all compile concat:css prefix:css compress:css"
  },
  "author": "Stefan",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "concat": "^1.0.3",
    "node-sass": "^6.0.1",
    "parallelshell": "^3.0.2",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "npm-run-all": "^4.1.5",
    "run-parallel": "^1.2.0"
  }
}
